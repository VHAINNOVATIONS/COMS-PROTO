package com.example.tests;

import java.util.regex.Pattern;
import java.util.concurrent.TimeUnit;
import org.junit.*;
import static org.junit.Assert.*;
import static org.hamcrest.CoreMatchers.*;
import org.openqa.selenium.*;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.Select;

public class CreateNewTemplatePart2 {
  private WebDriver driver;
  private String baseUrl;
  private boolean acceptNextAlert = true;
  private StringBuffer verificationErrors = new StringBuffer();

  @Before
  public void setUp() throws Exception {
    driver = new FirefoxDriver();
    baseUrl = "https://coms.vacloud.us/";
    driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
  }

  @Test
  public void testCreateNewTemplatePart2() throws Exception {
    driver.get(baseUrl + "/index.php");
    driver.findElement(By.id("button-1613-btnEl")).click();
    driver.findElement(By.id("radiofield-2399-inputEl")).click();
    driver.findElement(By.id("ext-gen6132")).click();
    driver.findElement(By.xpath("//div[@id='boundlist-2424-listEl']/ul/li[317]")).click();
    driver.findElement(By.id("ext-gen6135")).click();
    driver.findElement(By.xpath("//div[@id='boundlist-2426-listEl']/ul/li")).click();
    driver.findElement(By.id("textfield-2405-inputEl")).click();
    driver.findElement(By.id("textfield-2405-inputEl")).clear();
    driver.findElement(By.id("textfield-2405-inputEl")).sendKeys("1");
    driver.findElement(By.id("textfield-2409-inputEl")).clear();
    driver.findElement(By.id("textfield-2409-inputEl")).sendKeys("200");
    driver.findElement(By.id("ext-gen6138")).click();
    driver.findElement(By.xpath("//div[@id='boundlist-2428-listEl']/ul/li[7]")).click();
    driver.findElement(By.id("ext-gen6141")).click();
    driver.findElement(By.xpath("//div[@id='boundlist-2430-listEl']/ul/li[4]")).click();
    driver.findElement(By.id("ext-gen6144")).click();
    driver.findElement(By.xpath("//div[@id='boundlist-2432-listEl']/ul/li[2]")).click();
    driver.findElement(By.id("textfield-2414-inputEl")).click();
    driver.findElement(By.id("textfield-2414-inputEl")).clear();
    driver.findElement(By.id("textfield-2414-inputEl")).sendKeys("500");
    driver.findElement(By.id("textfield-2416-inputEl")).clear();
    driver.findElement(By.id("textfield-2416-inputEl")).sendKeys("167");
    driver.findElement(By.id("textfield-2408-inputEl")).clear();
    driver.findElement(By.id("textfield-2408-inputEl")).sendKeys("8:30a.m.");
    driver.findElement(By.id("button-2421-btnEl")).click();
  }

  @After
  public void tearDown() throws Exception {
    driver.quit();
    String verificationErrorString = verificationErrors.toString();
    if (!"".equals(verificationErrorString)) {
      fail(verificationErrorString);
    }
  }

  private boolean isElementPresent(By by) {
    try {
      driver.findElement(by);
      return true;
    } catch (NoSuchElementException e) {
      return false;
    }
  }

  private boolean isAlertPresent() {
    try {
      driver.switchTo().alert();
      return true;
    } catch (NoAlertPresentException e) {
      return false;
    }
  }

  private String closeAlertAndGetItsText() {
    try {
      Alert alert = driver.switchTo().alert();
      String alertText = alert.getText();
      if (acceptNextAlert) {
        alert.accept();
      } else {
        alert.dismiss();
      }
      return alertText;
    } finally {
      acceptNextAlert = true;
    }
  }
}
